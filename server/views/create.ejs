    <link rel="stylesheet" href="../stylesheets/admin.css">
</head>
<body class="adminlogin">
    <nav class="navbar navbar-expand-lg navbarbg " >
        <div class="container-fluid " >
          <a class="navbar-brand text-light" href="/admin/home">OTT PLATFORM</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent" >
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active text-light" aria-current="page" href="/admin/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/admin/userManagement">User Management</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="#">Subscription Management</a>
              </li>
             
              <li class="nav-item dropdown" >
                <a class="nav-link dropdown-toggle text-light" href="#"  role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Reports
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item usernavdropdown " href="#" >Revenue Report</a></li>
                  <li><a class="dropdown-item usernavdropdown" href="/admin/movieCount" >Movie Count</a></li>
                  <li><a class="dropdown-item usernavdropdown" href="#"  >Subscription</a></li>
                  <li><a class="dropdown-item usernavdropdown" href="#"  >Rated movies</a></li>
                </ul>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="#">Logout</a>
              </li>
             
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-light" type="submit">Search</button>
              
            </form>
          </div>
        </div>
      </nav>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <form class="w-50 adminloginform" method="post" action="/admin/create" >
            <h2 class="mb-4 text-center">New Movie Add</h2>
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" class="form-control" id="title" name="title"  placeholder="Enter movie title"  required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea class="form-control" id="description"  name="description" rows="3" placeholder="Enter movie description"></textarea>
            </div>
            <div class="mb-3">
                <label for="imageUpload" class="form-label" >Upload Image:</label>
                <input class="form-control" type="file" name="thumbnail"  accept="image/*"  required>
            </div>
            <div class="mb-3">
                <label for="videoUpload" class="form-label">Upload Video:</label>
                <input class="form-control" type="file" name="video"  accept="video/*" required >
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="text-center">
                <a href="#" class="text-decoration-none a">Forgot Password?</a>
            </div>
        </form>
    </div>
</body>
</html>
