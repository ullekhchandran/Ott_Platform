    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/admin.css">

</head>

<body class="editmoviedetails">

    <nav class="navbar navbar-expand-lg navbarbg " >
        <div class="container-fluid " >
          <a class="navbar-brand text-light" href="/admin/home">OTT PLATFORM</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent" >
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active text-light" aria-current="page" href="/admin/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/admin/userManagement">User Management</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="#">Subscription Management</a>
              </li>
             
              <li class="nav-item dropdown" >
                <a class="nav-link dropdown-toggle text-light" href="#"  role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Reports
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item usernavdropdown " href="#" >Revenue Report</a></li>
                  <li><a class="dropdown-item usernavdropdown" href="/admin/movieCount" >Movie Count</a></li>
                  <li><a class="dropdown-item usernavdropdown" href="#"  >Subscription</a></li>
                  <li><a class="dropdown-item usernavdropdown" href="#"  >Rated movies</a></li>
                </ul>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="#">Logout</a>
              </li>
             
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-light" type="submit">Search</button>
              
            </form>
          </div>
        </div>
      </nav>
    <div class="container  vh-100 d-flex justify-content-center align-items-center ">

        <div class="card p-5 shadow-lg" style="width: 100%; max-width: 700px;">
            <div>
                <h2 class="text-center mb-4">Edit Movie</h2>

                
            </div>

            <form  method="post"   action="/admin/edit/<%= movie._id %>">

                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" value="<%= movie.title %>" name="title" placeholder="Enter Title" >
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control" placeholder="Description" name="description" value="<%= movie.description %>"  >
                </div>

                <div class="mb-3">
                    <label class="form-label">Thumbnail</label>
                    <% if (movie.thumbnail) { %>
                        <p>Current Thumbnail: <a href="<%= movie.thumbnail %>" target="_blank" class="text-decoration-none">View Thumbnail</a></p>
                    <% } %>
                    
                    <input class="form-control" type="file" name="thumbnail" value="<%= movie.thumbnail  %>" accept="image/*"  >
                </div>

                <div class="mb-3">
                    <label class="form-label">Upload Video</label>
                    <% if (movie.viedio) { %>
                        <p>Current Video: <a href="<%= movie.viedio %>" target="_blank" class="text-decoration-none">View Video</a></p>
                    <% } %>
                    <input class="form-control" type="file" name="video" value="<%= movie.viedio %>" accept="video/*" >
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
                
                

                
             
            </form>
        </div>
    </div>


</body>

</html>