<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Bootstrap Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/admin.css">
</head>

<body class="historybackground">
    <nav class="navbar navbar-expand-lg navbarbg " >
        <div class="container-fluid " >
          <a class="navbar-brand text-light" href="/admin/home">OTT PLATFORM</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent" >
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active text-light" aria-current="page" href="/admin/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/admin/userManagement">User Management</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="#">Subscription Management</a>
              </li>
             
              <li class="nav-item dropdown" >
                <a class="nav-link dropdown-toggle text-light" href="#"  role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Reports
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item usernavdropdown " href="#" >Revenue Report</a></li>
                  <li><a class="dropdown-item usernavdropdown" href="/admin/movieCount" >Movie Count</a></li>
                  <li><a class="dropdown-item usernavdropdown" href="#"  >Subscription</a></li>
                  <li><a class="dropdown-item usernavdropdown" href="#"  >Rated movies</a></li>
                </ul>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="#">Logout</a>
              </li>
             
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-light" type="submit">Search</button>
              
            </form>
          </div>
        </div>
      </nav>
    <div class="container mt-5">
        <h1 class="text-center text-light ">Movie History</h1>
        <div class="table-responsive mt-5">
            <table class="table movietable">
                <thead class="table-dark">
                    <tr>
                        <th>Date & Time</th>
                        <th>Movie</th>
                    </tr>
                </thead>
                <tbody>
                    <% userWatchHistory.forEach(watchHistory=>{ %>
                      
                    <tr >
                        <td ><%= watchHistory.watchedAt %></td>
                        <td ><%= watchHistory.title  %></td>
                    </tr>
                   
                   <% }); %>
                </tbody>
            </table>
        </div>
        
    </div>


    <div class="container mt-5 d-flex justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo; Previous</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">Next &raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

</body>

</html>